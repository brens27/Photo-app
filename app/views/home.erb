<div class="photo-container">
	<div class="row">
		<% @photos.each do |photo| %>
			<div class="col-xs-12 col-sm-4 col-md-4 col-lg-3">
				<div class="thumbnail">
					<img class="img-responsive" src="<%= photo.photo_url(:thumb) %>">
					<div class="caption">
						<h3><%= photo.label %></h3>
						<p><%= photo.description %></p>
						<!-- <p>Uploaded by <span class="username">Username</span></p> -->
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>